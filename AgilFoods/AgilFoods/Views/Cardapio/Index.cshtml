@model IEnumerable<AgilFoods.Models.Cardapio>

@{
    ViewBag.Title = "Lista de Itens do Cardápio";
}

<h2>Lista de Itens do Cardápio</h2>

<p>
    @Html.ActionLink("Criar novo itens do cardápio", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DescricaoItem)
        </th>
        <th>
            @Html.Name("Fornecedor")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DescricaoItem)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Fornecedor.RazaoSocial)
        </td>
        <td>
            @Html.ActionLink("Editar item do cardápio", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Detalhes do item do cardápio", "Details", new { id=item.Id }) |
            @Html.ActionLink("Deletar item do cardápio", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
