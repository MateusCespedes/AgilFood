            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Voltar a lista de cardápios", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
