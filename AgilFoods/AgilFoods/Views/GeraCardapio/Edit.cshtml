                @Html.DropDownList("ItemCardapio2", "Selecione o Item do cardápio")
                @Html.ValidationMessageFor(model => model.ItemCardapio2)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Fornecedor, "Item 3", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("ItemCardapio3", "Selecione o Item do cardápio")
                @Html.ValidationMessageFor(model => model.ItemCardapio3)
            </div>
