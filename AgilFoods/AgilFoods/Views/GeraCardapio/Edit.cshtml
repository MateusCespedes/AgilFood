@model AgilFoods.Models.GeraCardapio

@{
    ViewBag.Title = "Editar Cardápio";
}

<h2>Editar Cardápio</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>GeraCardapio</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.DiaSemana, "Dia da Semana", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("DiaSemana", new List<SelectListItem>
                {
                    new SelectListItem{ Text= "Segunda-Feira", Value="Segunda-Feira"},
                    new SelectListItem{ Text= "Terça-Feira", Value="Terça-Feira"},
                    new SelectListItem{ Text= "Quarta-Feira", Value="Quarta-Feira"},
                    new SelectListItem{ Text= "Quinta-Feira", Value="Quinta-Feira"},
                    new SelectListItem{ Text= "Sexta-Feira", Value="Sexta-Feira"},

                }, "Selecione o dia da Semana")
                @Html.ValidationMessageFor(model => model.DiaSemana)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Fornecedor, "Fornecedor", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("FornecedorId", "Selecione o fornecedor")
                @Html.ValidationMessageFor(model => model.Fornecedor)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Fornecedor, "Item 1", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("ItemCardapio1", "Selecione o Item do cardápio")
                @Html.ValidationMessageFor(model => model.ItemCardapio1)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Fornecedor, "Item 2", htmlAttributes: new { @class = "control-label col-md-2" })
