            <div class="col-md-10">
                @Html.DropDownList("ItemCardapio4", "Selecione o Item do cardápio")
                @Html.ValidationMessageFor(model => model.ItemCardapio4)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Fornecedor, "Item 5", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("ItemCardapio5", "Selecione o Item do cardápio")
                @Html.ValidationMessageFor(model => model.ItemCardapio5)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Fornecedor, "Item 6", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("ItemCardapio6", "Selecione o Item do cardápio")
