@model IEnumerable<AgilFoods.Models.GeraCardapio>

@{
    ViewBag.Title = "Lista de Cardápios";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Criar novo Cardápio", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.Name("Restaurante")
        </th>
        <th>
            @Html.Name("Dia da Semana")
        </th>
        <th>
            @Html.Name("Item 1")
        </th>
        <th>
            @Html.Name("Item 2")
        </th>
        <th>
            @Html.Name("Item 3")
        </th>
        <th>
            @Html.Name("Item 4")
        </th>
        <th>
            @Html.Name("Item 5")
        </th>
        <th>
            @Html.Name("Item 6")
        </th>
        <th>
            @Html.Name("Item 7")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Fornecedor.RazaoSocial)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DiaSemana)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ItemCardapio1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ItemCardapio2)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ItemCardapio3)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ItemCardapio4)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ItemCardapio5)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ItemCardapio6)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ItemCardapio7)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.Id }) |
            @Html.ActionLink("Deletar", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
